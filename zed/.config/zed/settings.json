// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "provider": "supermaven"
  },
  "colorize_brackets": true,
  "toolbar": {
    "code_actions": true,
    "agent_review": true,
    "selections_menu": true,
    "quick_actions": false,
    "breadcrumbs": false
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "auto_update": true,
  "calls": {
    "mute_on_join": true
  },
  "preview_tabs": {
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "debugger": {
    "button": true
  },
  "search": {
    "button": true
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "nu.exe",
        "args": []
      }
    },
    "working_directory": "current_project_directory",
    "toolbar": {
      "breadcrumbs": false
    },
    "blinking": "on",
    "copy_on_select": true,
    "line_height": "standard"
  },
  "status_bar": {
    "cursor_position_button": true,
    "active_language_button": true
  },
  "project_panel": {
    "button": true,
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "diagnostics": {
    "button": true,
    "inline": {
      "enabled": true
    }
  },
  "prettier": {
    "allowed": true
  },
  "inlay_hints": {
    "enabled": true
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "fixed"
  },
  "minimap": {
    "show": "auto"
  },
  "gutter": {
    "min_line_number_digits": 2
  },
  "relative_line_numbers": "enabled",
  "show_signature_help_after_edits": false,
  "auto_signature_help": false,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  "ui_font_family": ".SystemUIFont",
  "icon_theme": "Material Icon Theme",
  "buffer_font_family": "Maple Mono NF",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "tab_size": 2,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night Moon"
  },
  "languages": {
    "C": {
      "tab_size": 4
    },
    "C++": {
      "tab_size": 4
    },
    "Go": {
      "tab_size": 4
    },
    "Python": {
      "tab_size": 4
    },
    "Rust": {
      "tab_size": 4
    }
  },
  "lsp": {
    "vtsls": {
      "binary": {
        "ignore_system_version": true
      }
    },
    "yaml-language-server": {
      "binary": {
        "ignore_system_version": true
      }
    }
  },
  "file_types": {
    "HTML": ["*.hbs", "*.html", "*.handlebars", "*.mustache"],
    "ini": [".shellcheckrc", ".sqlfluff", ".desktop", "dunstrc"],
    "JSONC": [
      ".prettierrc",
      "*.cjson",
      "keymap.json",
      "settings.json",
      "appsettings.json",
      "appsettings.*.json"
    ],
    "PowerShell": ["*.ps1", "*.psd1", "*.psm1"],
    "Shell Script": [
      ".bashenv",
      ".tmux.conf",
      "**/.local/bin/*",
      "**/.dotfiles/arch*"
    ]
  },
  "auto_install_extensions": {
    "csharp": true,
    "fish": true,
    "git-firefly": true,
    "html": true,
    "ini": true,
    "lua": true,
    "material-icon-theme": true,
    "nu": true,
    "powershell": true,
    "sql": true,
    "toml": true,
    "xml": true
  }
}
